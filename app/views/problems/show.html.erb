<div class="show-wrapper">
<div class="container">
  <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <h1><%= @problem.title %></h1>
        <p class="description"><%= @problem.description %></p>
        <p class="author">Author: <%= @problem.name %></p>
      <a href="https://www.facebook.com/sharer/sharer.php?u=example.org" target="_blank" class="btn btn-facebook"><i class="fa fa-facebook"></i> Facebook</a>
      <a href="whatsapp://send?text=The text to share!" data-action="share/whatsapp/share" title="Share via Whatsapp" target="_blank" class="btn btn-whatsapp"><i class="fa fa-whatsapp"></i> WhatsApp</a>
      <a href="http://twitter.com/home?status=This is a real problem:<%= @problem.title %>! Take a look on <%=request.original_url%>" title="Share on Twitter" target="_blank" class="btn btn-twitter"><i class="fa fa-twitter"></i> Twitter</a>

<!-- Comment Plugin comment-box -->
    <div class="fb-comments" data-numposts="5"></div>
      <%= link_to "Back", :back, class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
    </div>
  </div>
</div>
<!-- Facebook SDK so that the plugin works-->
<% content_for(:after_js) do %>

  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.7&appId=1417815691569028";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>
<% end %>
</div>
